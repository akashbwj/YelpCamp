<!DOCTYPE html>
<html>
	<head>
		<title>YelpCamp</title>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		<link rel="stylesheet" href="/stylesheets/main.css">
	</head>
	<body>

	<nav class="navbar navbar-default" style="background-color: #f55e56;">
		<div class="container-fluid">
			<div class="container">

				<div class="navbar-header">
					<a class="navbar-brand" style="color:#f7eceb; font-size: 21px; font-weight: 600;" href="/">YelpCamp</a>
				</div>			
				<div class="collapse navbar-collapse">
					<ul class="nav navbar-nav">
						<li><a href="/campgrounds" style="color:#f7eceb;">Home</a></li>
					</ul>
					<ul class="nav navbar-nav navbar-right">
						<% if(!currentUser){ %>
							<li><a href="/login" style="color:#f7eceb;">Login</a></li>
							<li><a href="/register" style="color:#f7eceb;">Sign Up</a></li>
						<% } else { %>
							<li><a href="#" style="color:#f7eceb;">Signed in as <%= currentUser.username %></a></li>
							<li><a href="/logout" style="color:#f7eceb;" >Logout</a></li>
						<% } %>
					</ul>
				</div>
			</div>
		</div>	
	</nav> 
	<div class="container">
		<% if(error && error.length>0) { %>
			<div class="alert alert-danger" role="alert">
				<%=error%>
			</div>	
		<% } %>
		<% if(success && success.length>0) { %>
			<div class="alert alert-success" role="alert">
				<%=success%>
			</div>	
		<% } %> 
	</div>


